<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.example.customview.NavigationBar
        android:id="@+id/navigationBar1"
        android:layout_width="fill_parent"
        android:layout_height="50dip" >
    </com.example.customview.NavigationBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical" 
        android:layout_weight="1"
        android:gravity="center" >
        <ImageView
            android:id="@+id/uploadIV"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginTop="10dip"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip" 
            android:layout_weight="1"
            >
             <Button
            android:id="@+id/recordBtn"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_marginLeft="3dip"
            android:layout_height="match_parent"
            android:background="@drawable/button_record"/>
                <Button
            android:id="@+id/playBtn"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_marginRight="3dip"
            android:layout_marginLeft="3dip"
            android:layout_height="match_parent"
            android:enabled="false"
            android:background="@drawable/button_voice" />

                <Button
                    android:id="@+id/stopBtn"
                    android:layout_width="0dip"
                    android:layout_marginRight="3dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:background="@drawable/button_stop" />
                <Button
            android:id="@+id/clearBtn"
            android:layout_marginRight="3dip"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:enabled="false"
            android:layout_weight="1"
            android:background="@drawable/button_delete" />
                
        </LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip" 
            android:layout_weight="1"
             android:orientation="horizontal"
             android:gravity="center"
             >
        <EditText
            android:id="@+id/cardnameET"
            android:layout_marginTop="5dip"
             android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请填写卡片名称"
            android:ems="10" >

            <requestFocus />
        </EditText>
        </LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
           android:layout_height="0dip" 
            android:layout_weight="1"
             android:orientation="horizontal"
             android:gravity="center"
             android:id="@+id/catogeryPart"
             android:visibility="gone"
             >

    <TextView
        android:id="@+id/textView1"
        android:gravity="center"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="14sp"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="3dip"
        android:text="所属目录:" />
 <TextView
        android:id="@+id/textView2"
        android:gravity="left"
        android:layout_width="0dip"
        android:textSize="14sp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="3dip"
        android:visibility="gone"
         />
        <Spinner
            android:layout_weight="4"
            android:id="@+id/spinner1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="3dip"
            android:layout_marginTop="3dip"
            />
		</LinearLayout>
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip" 
            android:layout_weight="1"
             android:orientation="horizontal"
             android:gravity="center"
             >
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"
            android:background="@drawable/button_save"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>